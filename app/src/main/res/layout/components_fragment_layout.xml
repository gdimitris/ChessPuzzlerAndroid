<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:maxLines="1"
        android:id="@+id/moveIndicator"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="17sp"
        android:layout_marginBottom="2sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Elapsed:"
            android:id="@+id/timeElapsed"
            android:textStyle="italic"
            android:typeface="serif"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recall:"
            android:id="@+id/recallRate"
            android:textStyle="italic"
            android:typeface="serif"
            android:textSize="12sp"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Next Puzzle"
            android:id="@+id/nextPuzzleButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Annotations"
            android:id="@+id/toggleAnnotations"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/flipBoard"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Flip Board"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Solution"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/showSolution"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Test text ikjnsdfnadfssdfa"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/solutionText"/>


    </LinearLayout>




</LinearLayout>