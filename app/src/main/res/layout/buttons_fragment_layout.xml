<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Next Puzzle"
            android:id="@+id/nextPuzzleButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Annotations"
            android:id="@+id/toggleAnnotations"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/flipBoard"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Flip Board"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Solution"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/showSolution"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Test text ikjnsdfnadfssdfa"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/solutionText"/>


    </LinearLayout>




</LinearLayout>